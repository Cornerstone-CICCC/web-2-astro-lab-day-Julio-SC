---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
const posts = await getCollection('blog');
---

<Layout>
  <h1>My Blog posts</h1>
  <ul>
    {posts.map(post => (
      <li><a href={`/blog/${post.id}`}>{post.data.title}</a></li>
    ))}
  </ul>

  <a href="/blog">Blog</a>
</Layout>